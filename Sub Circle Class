package circlecalculator.circle.calculator;

public class Circle {
     private double r;

    // Default constructor with default radius
    public Circle() {
        this.r = 5.5; // Example default radius
    }

    // Constructor with user-defined radius
    public Circle(double radius) {
        this.r = radius;
    }

    public double area() {
        return Math.PI * Math.pow(r, 2);
    }

    public double circumference() {
        return 2 * Math.PI * r;
    }   
    public double arearadii (double radi){
    return Math.PI * Math.pow(radi, 2);
    }
    public double circumradii (double radi){
    return 2 * Math.PI * radi;
    }
}
